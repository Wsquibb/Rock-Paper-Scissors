/* Imports two different fotns (Permanent Marker, and Indie Flower). */
@import url('https://fonts.googleapis.com/css?family=Permanent+Marker');
@import url('https://fonts.googleapis.com/css?family=Indie+Flower');

/* Universal tag to make the margins and padding initially 0. */
*{
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* Makes the background color of the webpage greyish. */
body{
  background-color: #24272E;
}

/* Styles the header of the webpage with a light orange background image spanning the top. */
header{
  background-image: url('http://www.freeliquidtemplates.com/free-headers-for-websites/header10.jpg');
  padding: 50px;
}

/* Styles the heading text to make it white, centered and a certain font. */
header h1{
  color: white;
  text-align: center;
  font-family: 'Indie Flower', cursive;
}

/* Styles the scoreboard so that it has a border, centered, and sized. */
.score-board{
  border: 3px solid white;
  border-radius: 4px;
  text-align: center;
  width: 200px;
  margin: 20px auto;
  color: white;
  font-size: 46px;
  padding: 15px 20px;
  font-family: 'Permanent Marker', cursive;
  position: relative;
}

/* Styles the two badges to have a white font and orange background. */
.badge{
  background-color: #E57254;
  color: white;
  font-size: 14px;
  padding: 2px 10px;
  font-family: 'Permanent Marker', cursive;
}

/* Positions the user label. */
#user-label{
  position: absolute;
  top: 30px;
  left: -25px;
}

/* Positions the computer label. */
#comp-label{
  position: absolute;
  top: 30px;
  right: -30px;
}

/* Styles the result message. */
.result{
  font-size: 40px;
  color: black;
}

/* Styles the result message. */
.result p{
  text-align: center;
  font-family: 'Indie Flower', cursive;
  font-weight: bold;
  color: white;
}

/* Positions the parent of the images. */
.choices{
  margin-top: 50px;
  margin-bottom: 20px;
  text-align: center;
}

/* Styles each image to line up horizontally, and gives each one a border and transisition time of 0.3s. */
.choice{
  display: inline-block;
  border: 4px solid white;
  border-radius: 10px;
  padding: 10px;
  margin: 0 20px;
  transition: all 0.3s ease;
  background-color: white;
}

/* Makes each image a square 200px tall, and 200px wide. */
.choice img{
  height: 200px;
  width: 200px;
}

/* While the mouse is on an image, it changes the border color and the cursor. */
.choice:hover{
  border-color: #E57254;
  border-style: solid;
  border-width: 2px 7px 7px 2px;
  cursor: pointer;
}

/* Styles the message element. */
#message{
  text-align: center;
  font-size: 20px;
  font-weight: bold;
  font-family: 'Indie Flower', cursive;
  color: white;
}

/* Styles the footer of the webpage. */
footer{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background-color: #E57254;
  color: white;
  text-align: center;
  padding: 10px;
  font-size: 20px;
  font-family: 'Indie Flower', cursive;
}

/* Styles the link of the footer text to have no underline, and changes the text color to white. */
footer a{
  text-decoration: none;
  color: white;
}

/* Makes it so whenever you hover over the footer the background color changes to a darker orange. */
footer:hover{
  background-color: #bf593f;
}
